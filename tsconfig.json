{
  "compilerOptions": {
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "ES2016",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "test/*": ["test/*"],
      "*": ["src/definitions/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp"
  ]
}
